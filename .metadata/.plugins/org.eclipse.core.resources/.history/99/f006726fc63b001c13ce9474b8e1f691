#include <stdio.h>
#include <stdlib.h>

int main(void) {
	int a[10],i,limit,sum=0;
	printf("please enter the limit \n");
	scanf("%d",&limit);
	printf("please enter the values of the array");
	for(i=0; i<limit; i++){
		scanf("%d",&a[i]);
	}
	for(i=a[i]; i<limit; i++){
		if(i%2==0){
			sum=sum+a[i];
		}
	}
	printf("%d",sum);
	return EXIT_SUCCESS;
}
